{% extends 'base.html.twig' %}

{% block body %}


    

	<div class="contact1">


		<div class="container-contact1">

        <span class="contact1-form-title">

        {% if app.flashes('success')|length > 0 %}
		<div class="alert alert-success">
			{{ 'Demande de partenariat enregistrée. Code de connexion envoyé après validation par un administrateur.'|trans }}
		</div>
		{% endif %}


			<h1>Étape 1 : Enregistrez-vous pour obtenir votre code de connexion et devenir partenaire avec SM DEVIS</h1>
        </span>

        <span class="contact1-form-text">
		En utilisant notre plateforme, vous pouvez trouver des opportunités de partenariat avec SM DEVIS et accéder aux projets des utilisateurs pour leur proposer vos services. 
		Commencez dès maintenant !
        </span>
        
         <span class="contact1-form-text">
				<p>Remplissez le formulaire ci-dessous pour vous inscrire et recevoir votre code de connexion afin d'accéder aux projets et offrir vos services :</p>
        </span>
        
     
        

			<div class="contact1-pic js-tilt" data-tilt>
				<img src="images/smdevis-logo.jpg" alt="IMG">
			</div>

            
            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

			<form class="contact1-form validate-form">
				<span class="contact1-form-title">
					Vos identifiants
				</span>

				<div class="wrap-input1 validate-input">
                    {{ form_widget(form.nom, {'attr': {'class': 'input1', 'placeholder': 'Votre Nom'}}) }}
                    <span class="shadow-input1"> </span>
                    <div class="valid-input">{{ form_errors(form.nom) }}</div>
				</div>

                <div class="wrap-input1 validate-input">
                    {{ form_widget(form.prenom, {'attr': {'class': 'input1', 'placeholder': 'Votre Prenom'}}) }}   
                    <span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.prenom) }}</div>
				</div>

                <div class="wrap-input1 validate-input">
					{{ form_widget(form.civilite, {'attr': {'class': 'input1', 'placeholder': 'Votre Civilité'}}) }}
					<span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.civilite) }}</div>
				</div>

				<div class="wrap-input1 validate-input">
					{{ form_widget(form.nom_soc, {'attr': {'class': 'input1', 'placeholder': 'Nom de votre entreprise'}}) }}
					<span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.nom_soc) }}</div>
				</div>

                <div class="wrap-input1 validate-input">
					{{ form_widget(form.email, {'attr': {'class': 'input1', 'placeholder': 'Email'}}) }}
					<span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.email) }}</div>
				</div>

				<div class="wrap-input1 validate-input">
					{{ form_widget(form.telephone, {'attr': {'class': 'input1', 'placeholder': 'Numéro de téléphone'}}) }}
					<span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.telephone) }}</div>
				</div>

                <div class="wrap-input1 validate-input">
					{{ form_widget(form.adresse, {'attr': {'class': 'input1', 'placeholder': 'Votre adresse'}}) }}
					<span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.adresse) }}</div>
				</div>

                <div class="wrap-input1 validate-input">
					{{ form_widget(form.ville, {'attr': {'class': 'input1', 'placeholder': 'Votre Ville'}}) }}
					<span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.ville) }}</div>
				</div>

                <div class="wrap-input1 validate-input">
					{{ form_widget(form.codepostal, {'attr': {'class': 'input1', 'placeholder': 'Votre code postal'}}) }}
					<span class="shadow-input1"></span>
                    <div class="valid-input">{{ form_errors(form.codepostal) }}</div>
				</div>

				<div class="container-contact1-form-btn">
					<button class="contact1-form-btn" type="submit">
						<span>
							Créez votre compte partenaire
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
                {{ form_end(form) }}
			</form>
		</div>
	</div>


    <script type="text/javascript">
    function removePlaceholderOption() {
        var selectElement = document.getElementById("form_civilite");
        if (selectElement.options[0].value === "") {
            selectElement.removeChild(selectElement.options[0]);
        }
    }
</script>
    

	{% endblock %}