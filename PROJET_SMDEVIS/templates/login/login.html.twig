{% extends 'loginBase.html.twig' %}



{% block body %}

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Bienvenue sur l'Espace Partenaires SM-DEVIS</h2>


                    {% for flashMessage in app.session.flashBag.get('danger') %}
                    <div class="alert alert-danger">
                        {{ flashMessage }}
                    </div>
                    {% endfor %}



				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
							<div class="text w-100">
								<h2>Devenez partenaire dès maintenant pour accéder aux projets et offrir vos services.</h2>
								<p>Remplissez le formulaire via le bouton ci-dessous.</p>
								<a href={{ path ('app_form') }} class="btn btn-white btn-outline-white" >Devenir Partenaire</a>
							</div>
			      </div>
						<div class="login-wrap p-4 p-lg-5">
			      	<div class="d-flex">
			      		<div class="w-100">
			      			<h3 class="mb-4">Se connecter</h3>
			      		</div>
								<div class="w-100">
									<p class="social-media d-flex justify-content-end">
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
									</p>
								</div>
			      	</div>

                             {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

							<form action="#" class="signin-form">

			      		<div class="form-group mb-3">
                            
			      			<label class="label" for="name">Email :</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
                            <div class="valid-input">{{ form_errors(form.email) }}</div>
			      		</div>

                        <div class="form-group mb-3">
                            <label class="label" for="password">Code login :</label>
                            {{ form_widget(form.loginCode, {'attr': {'class': 'form-control', 'placeholder': 'Votre code login'}}) }}
                            <div class="valid-input">{{ form_errors(form.loginCode) }}</div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3" >Sign In</button>
                        </div>

                        {{ form_end(form) }}

		            <div class="form-group d-md-flex">
		            	<div class="w-50 text-left">
			            	<label class="checkbox-wrap checkbox-primary mb-0">Se souvenir de moi
									  <input type="checkbox" checked>
									  <span class="checkmark"></span>
										</label>
									</div>
									<div class="w-50 text-md-right">
										<a href="#">Mot de passe oublié</a>
									</div>
		            </div>
		          </form>
		        </div>
		      </div>
				</div>
			</div>
		</div>
	</section>

  {% endblock %}