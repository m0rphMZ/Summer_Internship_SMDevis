{% extends 'base.html.twig' %}

{% block body %}

    

	<div class="contact1">


		<div class="container-contact1">

        <span class="contact1-form-title">

		{% for flashMessage in app.session.flashBag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>

        {% endfor %}


		
		<div class="col-md-8 col-center m-auto">
			<h2>Témoignages de nos partenaires</h2>
			<div id="myCarousel" class="carousel slide" data-ride="carousel">
				<!-- Carousel -->
				<div class="carousel-inner">
					<div class="item carousel-item active">
						<div class="img-box"><img src="images/FaridY.png" alt=""></div>
						<p class="testimonial">Trés bonne collaboration avec SM Devis Tunisie, L'équipe est très réactive, et cela rend notre travail plus facile et plus efficace</p>
